<!--
  键盘控制启动文件
  使用方法：
  roslaunch px4ctrl keyboard_control.launch
-->

<launch>
    <!--  启动键盘控制节点 -->
    <node name="keyboard_control" pkg="px4ctrl" type="keyboard_control" output="screen">
        <!-- 键盘控制参数配置 -->
        <param name="move_step" value="0.3" />          <!-- 每次移动距离(米) -->
        <param name="yaw_step" value="0.2" />           <!-- 每次转向角度(弧度) -->
        <param name="publish_rate" value="50" />        <!-- 发布频率(Hz) -->
    </node>
    
    <!-- 可选：启动teleop_twist_keyboard作为备选方案 -->
    <!--
    <node name="teleop_twist_keyboard" pkg="teleop_twist_keyboard" type="teleop_twist_keyboard.py" output="screen">
        <remap from="cmd_vel" to="/px4ctrl/keyboard_cmd"/>
        <param name="speed" value="0.5"/>
        <param name="turn" value="0.2"/>
    </node>
    -->
    
</launch>
